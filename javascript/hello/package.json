{
  "name": "@scramjet/hello",
  "version": "0.23.0",
  "main": "./index",
  "author": "pietrzakacper",
  "license": "GPL-3.0",
  "description": "Sequence that modifies incoming stream of strings by adding Hello.",
  "keywords": [
    "easy",
    "streaming",
    "data transformation",
    "Data Transformer"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/scramjetorg/platform-samples/tree/main/javascript/hello"
  },
  "engines": {
    "node": "^16.0.0"
  },
  "scripts": {
    "build": "cp -r index.js data.txt package.json dist/ && (cd dist && npm i --omit=dev)",
    "pack:pub": "DIST_DIR=${DIST_DIR:-.}; si seq pack ./dist -o ${DIST_DIR}/$(basename $(readlink -f ../))-$(basename $(readlink -f .)).tar.gz",
    "pack": "si seq pack ./dist/",
    "clean": "rm -rf ./dist ./*.tar.gz"
  },
  "assets": [
    "data.txt"
  ]
}
